{
	"compilerOptions": {
		"allowJs": false,
		"composite": true,
		"noEmit": false,
		"outDir": "dist",
		"rootDir": "src",
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"lib": ["dom", "es2017"],
		"target": "es2023",
		"esModuleInterop": true,
		"sourceMap": true,
		"inlineSources": true,
		// Set `sourceRoot` to  "/" to strip the build path prefix
		// from generated source code references.
		// This improves issue grouping in Sentry.
		"sourceRoot": "/",
		// Make sure that Prisma is aggressive with type-related issues.
		"strict": true,
		"strictNullChecks": true,
		"exactOptionalPropertyTypes": true,
		"noUncheckedIndexedAccess": true
	},
	"include": ["src"]
}
