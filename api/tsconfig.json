{
  "compilerOptions": {
		"allowJs": false,
		"composite": true,
		"noEmit": false,
		"outDir": "dist",
		"rootDir": "src",
		"skipLibCheck": true,
		"module": "commonjs",
		"lib": ["dom", "es2017"],
		"target": "es5",
		"esModuleInterop": true,
		"sourceMap": true,
		"inlineSources": true,
		// Set `sourceRoot` to  "/" to strip the build path prefix
		// from generated source code references.
		// This improves issue grouping in Sentry.
		"sourceRoot": "/"
	},
	"include": ["src"]
}
