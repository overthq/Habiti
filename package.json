{
	"name": "habiti",
	"version": "0.0.1",
	"description": "Simplifying online shopping",
	"repository": "https://github.com/overthq/Habiti.git",
	"author": "Oluwakorede Fashokun <koredefashokun@gmail.com>",
	"license": "GPL-3.0-or-later",
	"private": true,
	"scripts": {
		"start:app": "pnpm --filter @habiti/app start",
		"start:dashboard": "pnpm --filter @habiti/dashboard start",
		"start-redis": "redis-server --daemonize yes",
		"postinstall": "husky",
		"load-bank-list": "node scripts/load-banks"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"prettier --write"
		]
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"@babel/*",
				"expo-modules-*",
				"typescript"
			]
		},
		"overrides": {
			"react": "19.0.0",
			"react-dom": "19.0.0"
		}
	},
	"devDependencies": {
		"@types/node": "^22",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.1",
		"prettier": "^3.5.3",
		"typescript": "^5.8.3"
	}
}
